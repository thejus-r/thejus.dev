---
import Footer from "./Footer/Footer.astro"
import NavBarWrapper from "./NavBar/NavBarWrapper.astro"
export interface props {
  title?: String
}

const { title = "Thejus Rajendran" } = Astro.props as props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link
      href="https://api.fontshare.com/v2/css?f[]=satoshi@1,2&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-stone-100 h-screen w-screen">
    <NavBarWrapper />
    <div class="flex flex-col mx-12 lg:mx-20">
      <slot />
    </div>
    <Footer />
  </body>
</html>
